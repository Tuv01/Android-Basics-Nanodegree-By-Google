<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="@dimen/seventeendp"
    android:paddingLeft="@dimen/seventeendp"
    android:paddingRight="@dimen/fivedp"
    android:paddingTop="@dimen/seventeendp"
    android:paddingStart="@dimen/seventeendp"
    android:paddingEnd="@dimen/fivedp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fivedp"
        android:fontFamily="serif"
        tools:text="ddfs"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/fifteensp" />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:maxLines="1"
        tools:text="dsfds"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/twelvesp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:maxLines="1"
        tools:text="dsfdsf"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/twelvesp" />

    <TextView
        android:id="@+id/publicationdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:maxLines="1"
        tools:text="sdfsdfs"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/twelvesp"
        android:textStyle="italic" />
</LinearLayout>